{
    "name": "@galaxar/app-template",
    "version": "1.0.0",
    "description": "Galaxar nodejs application template",
    "main": "cjs/index.js",
    "module": "src/index.js",
    "react-native": "src/index.js",
    "scripts": {
        "test": "pnpm build && mocha --recursive test/**/*.spec.js",
        "cover": "nyc --reporter=html --reporter=text mocha --recursive test/**/*.spec.js && open ./coverage/index.html",
        "prettier": "prettier --write .",
        "clean": "shx rm -rf cjs",
        "build": "pnpm clean && swc src/**/*.js -d ./cjs"
    },
    "keywords": [
        "galaxar",
        "app"
    ],
    "nyc": {
        "exclude": [
            ".*",
            "cjs",
            "test",
            "**/*.spec.js"
        ]
    },
    "dependencies": {
        "@galaxar/app": "^1.0.3",
        "@galaxar/types": "^1.0.3",
        "@galaxar/utils": "^1.0.3"
    },
    "prettier": {
        "quoteProps": "consistent",
        "printWidth": 120,
        "singleQuote": true,
        "trailingComma": "es5",
        "tabWidth": 4,
        "useTabs": false
    },
    "license": "MIT",
    "devDependencies": {
        "@galaxar/tester": "^1.0.0",
        "@swc-node/register": "^1.6.5",
        "@swc/cli": "^0.1.62",
        "@swc/core": "^1.3.57",
        "mocha": "^10.0.0",
        "nyc": "^15.1.0",
        "should": "^13.2.3",
        "shx": "0.3.4"
    }
}
