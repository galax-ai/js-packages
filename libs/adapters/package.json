{
    "name": "@galaxar/adapters",
    "version": "1.0.0",
    "description": "Galaxar common adapter for packages",
    "main": "cjs/index.js",
    "module": "src/index.js",
    "react-native": "src/index.js",
    "exports": {
        ".": {
            "import": "./src/index.js",
            "require": "./cjs/index.js"
        },
        "./*": {
            "import": "./src/*.js",
            "require": "./cjs/*.js"
        }
    },
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "test": "echo tbd",
        "cover": "nyc --reporter=html --reporter=text mocha --recursive test/**/*.spec.js && open ./coverage/index.html",
        "prettier": "prettier --write .",
        "clean": "shx rm -rf cjs",
        "build": "pnpm clean && swc src/**/*.js -d ./cjs"
    },
    "keywords": [
        "galaxar",
        "lib"
    ],
    "nyc": {
        "exclude": [
            ".*",
            "cjs",
            "test",
            "**/*.spec.js"
        ]
    },
    "dependencies": {
    },
    "prettier": {
        "quoteProps": "consistent",
        "printWidth": 120,
        "singleQuote": true,
        "trailingComma": "es5",
        "tabWidth": 4,
        "useTabs": false
    },
    "license": "MIT",
    "devDependencies": {
        "@swc-node/register": "^1.6.5",
        "@swc/cli": "^0.1.62",
        "@swc/core": "^1.3.57",
        "mocha": "^10.0.0",
        "nyc": "^15.1.0",
        "should": "^13.2.3",
        "shx": "0.3.4"
    }
}
