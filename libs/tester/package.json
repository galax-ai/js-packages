{
    "name": "@galaxar/tester",
    "version": "1.0.0",
    "description": "Node application unit test framework",
    "main": "cjs/index.js",
    "module": "lib/index.js",
    "react-native": "lib/index.js",
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "test": "pnpm build && mocha --recursive test/**/*.spec.js",
        "cover": "nyc --reporter=html --reporter=text mocha --recursive test/**/*.spec.js && open ./coverage/index.html",
        "prettier": "prettier --write .",
        "lint": "eslint \"**/*.js\"",
        "lint-fix": "eslint \"**/*.js\" --fix",
        "clean": "shx rm -rf cjs",
        "build": "pnpm clean && swc lib/**/*.js -d ./cjs"
    },
    "keywords": [
        "galaxar",
        "app",
        "framework"
    ],
    "nyc": {
        "exclude": [
            ".*",
            "cjs",
            "test",
            "**/*.spec.js"
        ]
    },
    "dependencies": {
        "@galaxar/jsonv": "workspace:*",
        "@galaxar/sys": "workspace:*",
        "@galaxar/types": "workspace:*",
        "@galaxar/utils": "workspace:*",
        "allure-mocha": "^2.3.0",
        "mocha": "^10.0.0"
    },
    "prettier": {
        "quoteProps": "consistent",
        "printWidth": 120,
        "singleQuote": true,
        "trailingComma": "es5",
        "tabWidth": 4,
        "useTabs": false
    },
    "license": "MIT"
}
