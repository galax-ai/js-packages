{
    "name": "@galaxar/utils",
    "version": "1.0.4",
    "description": "Galaxar JavaScript Utility Library for both Node.js and browser",
    "main": "cjs/index",
    "module": "lib/index.js",
    "react-native": "lib/index.js",
    "exports": {
        ".": {
            "import": "./lib/index.js",
            "require": "./cjs/index.js"
        },
        "./*": {
            "import": "./lib/*.js",
            "require": "./cjs/*.js"
        }
    },
    "publishConfig": {
        "access": "public"
    },
    "nyc": {
        "exclude": [
            ".*",
            "cjs",
            "__test__"
        ]
    },
    "scripts": {
        "test": "pnpm build && mocha --recursive ./__test__/*.spec.js",
        "benchmark": "mocha --recursive ./test/*.spec.js",
        "cover": "nyc --reporter=html --reporter=text mocha --recursive ./__test__/*.spec.js && open ./coverage/index.html",
        "prettier": "prettier --write .",
        "lint": "eslint \"**/*.js\"",
        "lint-fix": "eslint \"**/*.js\" --fix",
        "clean": "shx rm -rf cjs",
        "build": "pnpm clean && swc ./lib/*.js -d ./cjs"
    },
    "keywords": [
        "galaxar",
        "javascript",
        "utility"
    ],
    "license": "MIT",
    "devDependencies": {
        "benchmark": "^2.1.4",
        "csv-parse": "^5.0.4",
        "mobx": "^6.9.0"
    },
    "dependencies": {
        "lodash": "^4.17.21"
    },
    "prettier": {
        "quoteProps": "consistent",
        "printWidth": 120,
        "singleQuote": true,
        "trailingComma": "es5",
        "tabWidth": 4,
        "useTabs": false
    }
}
