{
    "name": "@galaxar/server",
    "version": "1.0.6",
    "description": "Node http server application framework",
    "main": "cjs/index.js",
    "module": "lib/index.js",
    "react-native": "lib/index.js",
    "exports": {
        ".": {
            "import": "./lib/index.js",
            "require": "./cjs/index.js"
        },
        "./*": {
            "import": "./lib/*.js",
            "require": "./cjs/*.js"
        }
    },
    "publishConfig": {
        "access": "public"
    },
    "author": "Rockie Guo <rockie@kitmi.com.au>",
    "scripts": {
        "test": "pnpm build && SWCRC=true mocha --recursive test/**/*.spec.js",
        "cover": "SWCRC=true nyc --reporter=html --reporter=text mocha --recursive test/**/*.spec.js && open ./coverage/index.html",
        "prettier": "prettier --write .",
        "lint": "eslint \"**/*.js\"",
        "lint-fix": "eslint \"**/*.js\" --fix",
        "clean": "shx rm -rf cjs",
        "build": "pnpm clean && swc lib/**/*.js -d ./cjs"
    },
    "keywords": [
        "galaxar",
        "http",
        "server",
        "koa",
        "app",
        "framework"
    ],
    "nyc": {
        "exclude": [
            ".*",
            "cjs",
            "test",
            "**/*.spec.js"
        ]
    },
    "dependencies": {
        "@galaxar/algo": "workspace:*",
        "@galaxar/app": "workspace:*",
        "@galaxar/jsonc": "workspace:*",
        "@galaxar/sys": "workspace:*",
        "@galaxar/types": "workspace:*",
        "@galaxar/utils": "workspace:*",
        "@koa/router": "^12.0.0",
        "glob": "^10.2.4",
        "koa": "^2.14.2",
        "koa-body": "^6.0.1",
        "koa-compress": "^5.1.1",
        "koa-etag": "^4.0.0",
        "koa-mount": "^4.0.0",
        "koa-static": "^5.0.0",
        "koa-views": "^8.0.0",
        "request-ip": "^3.3.0"
    },
    "prettier": {
        "quoteProps": "consistent",
        "printWidth": 120,
        "singleQuote": true,
        "trailingComma": "es5",
        "tabWidth": 4,
        "useTabs": false
    },
    "license": "MIT",
    "devDependencies": {
        "capture-console": "^1.0.1",
        "pino": "^8.14.1",
        "pino-http": "^8.3.3",
        "supertest": "^6.3.3",
        "swig-templates": "^2.0.3"
    }
}
