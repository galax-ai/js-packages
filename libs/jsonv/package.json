{
    "name": "@galaxar/jsonv",
    "version": "1.0.3",
    "description": "JSON Validation Syntax",
    "main": "cjs/index.js",
    "module": "lib/index.js",
    "react-native": "lib/index.js",
    "exports": {
        ".": {
            "import": "./lib/index.js",
            "require": "./cjs/index.js"
        },
        "./*": {
            "import": "./lib/*.js",
            "require": "./cjs/*.js"
        },
        "./locale/*": {
            "import": "./lib/locale/*.js",
            "require": "./cjs/locale/*.js"
        }
    },
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "test": "pnpm build && mocha --recursive test/**/*.spec.js",
        "cover": "nyc --reporter=html --reporter=text mocha --recursive test/**/*.spec.js && open ./coverage/index.html",
        "prettier": "prettier --write .",
        "lint": "eslint \"**/*.js\"",
        "lint-fix": "eslint \"**/*.js\" --fix",
        "clean": "shx rm -rf cjs",
        "build": "pnpm clean && swc lib/**/*.js -d ./cjs"
    },
    "keywords": [
        "galaxar",
        "json",
        "validation",
        "validator"
    ],
    "nyc": {
        "exclude": [
            ".*",
            "cjs",
            "test",
            "**/*.spec.js"
        ]
    },
    "dependencies": {
        "@galaxar/utils": "workspace:*",
        "@galaxar/types": "workspace:*"
    },
    "devDependencies": {},
    "prettier": {
        "quoteProps": "consistent",
        "printWidth": 120,
        "singleQuote": true,
        "trailingComma": "es5",
        "tabWidth": 4,
        "useTabs": false
    },
    "license": "MIT"
}
