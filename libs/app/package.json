{
    "name": "@galaxar/app",
    "version": "1.0.8",
    "description": "Node application framework",
    "main": "cjs/index.js",
    "module": "lib/index.js",
    "react-native": "lib/index.js",
    "exports": {
        ".": {
            "import": "./lib/index.js",
            "require": "./cjs/index.js"
        },
        "./*": {
            "import": "./lib/*.js",
            "require": "./cjs/*.js"
        }
    },
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "test": "pnpm build && mocha --recursive test/**/*.spec.js",
        "cover": "nyc --reporter=html --reporter=text mocha --recursive test/**/*.spec.js && open ./coverage/index.html",
        "prettier": "prettier --write .",
        "lint": "eslint \"**/*.js\"",
        "lint-fix": "eslint \"**/*.js\" --fix",
        "clean": "shx rm -rf cjs",
        "build": "pnpm clean && swc lib/**/*.js -d ./cjs"
    },
    "keywords": [
        "galaxar",
        "app",
        "framework"
    ],
    "nyc": {
        "exclude": [
            ".*",
            "cjs",
            "test",
            "**/*.spec.js"
        ]
    },
    "dependencies": {
        "@galaxar/algo": "workspace:*",
        "@galaxar/jsonc": "workspace:*",
        "@galaxar/sys": "workspace:*",
        "@galaxar/types": "workspace:*",
        "@galaxar/utils": "workspace:*",
        "@galaxar/adapters": "workspace:*",
        "inquirer": "^8.2.4",
        "minimist": "^1.2.8",
        "pino": "^8.14.1",
        "pino-pretty": "^10.0.0"
    },
    "prettier": {
        "quoteProps": "consistent",
        "printWidth": 120,
        "singleQuote": true,
        "trailingComma": "es5",
        "tabWidth": 4,
        "useTabs": false
    },
    "license": "MIT",
    "devDependencies": {
        "capture-console": "^1.0.1"
    }
}
